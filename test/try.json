{
  "helpers": [
    { "IdentifierStart": "[$_a-zA-Z]" },
    { "IdentifierPart": "{IdentifierStart}|[0-9]" },
    { "Identifier": "{IdentifierStart}{IdentifierPart}*" }
  ],

  "definitions": [
    { "VAR": "var" },
    { "IDENTIFIER": "{Identifier}" },
    { "IF": "if" },
    { "ELSE": "else" },
    { "FOR": "for" },
    { "RETURN": "return" },
    { "FUNCTION": "function" },
    { "EOF": "<<EOF>>" }
  ],

  "rules": [
    "Statement": {
      "match": [
        "Block",
        "VariableStatement",
        "EmptyStatement",
        "IfStatement",
        "IterationStatement",
        "ReturnStatement"
      ]
    },

    "Block": {
      "match": ["{", "StatementList", "}"]
    },

    "StatementList": {
      "match": [
        ["StatementList", "Statement"],
        []
      ]
    },

    "VariableStatement": {
      "match": [
        ["VAR", "IDENTIFIER"],
        ["VAR", "IDENTIFIER", "Initialiser"]
      ]
    },

    "Initialiser": {
      "match": ["=", "AssignmentExpression"]
    },

    "EmptyStatement": {
      "match": [";"]
    },

    "IfStatement": {
      "match": [
        ["IF", "(", "*", ")", "Statement"],
        ["IF", "(", "*", ")", "ELSE", "Statement"]
      ]
    },

    "IterationStatement": {
      "match": [
        ["FOR", "(", "*", ")", "Statement"]
      ]
    },

    "ReturnStatement": {
      "match": ["RETURN", "*", ";"]
    },

    "FunctionDeclaration": {
      "match": ["FUNCTION", "IDENTIFIER", "(", "*", ")", "Block"]
    },

    "SourceElement": {
      "match": ["Statement", "FunctionDeclaration"]
    },

    "SourceElements": {
      "match": [
        ["SourceElement", "SourceElements"],
        []
      ]
    },

    "Program": {
      "match": ["SourceElements", "EOF"]
    }
  ]
}